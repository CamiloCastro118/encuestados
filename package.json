{
  "name": "encuestas-fullstack",
  "version": "1.0.0",
  "description": "AplicaciÃ³n fullstack de encuestas con Angular y Node.js",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && npm install --prefix frontend && npm install --prefix backend",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm run dev",
    "start:frontend:prod": "cd frontend && npm run start:prod",
    "start:backend:prod": "cd backend && npm start",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build:prod",
    "build:ghpages": "cd frontend && npm run build:ghpages",
    "test": "concurrently \"npm run test:frontend\" \"npm run test:backend\"",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "predeploy": "cd frontend && npm run predeploy",
    "deploy": "cd frontend && npm run deploy",
    "deploy:force": "cd frontend && npm run deploy:force",
    "git:check": "cd frontend && npm run git:check",
    "push:safe": "cd frontend && npm run push:safe",
    "preview": "cd frontend && npm run preview",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "clean": "rimraf frontend/node_modules backend/node_modules frontend/dist backend/dist",
    "lint:frontend": "cd frontend && ng lint",
    "format": "prettier --write \"**/*.{js,ts,json,html,css,scss}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "angular",
    "nodejs",
    "express",
    "encuestas",
    "fullstack",
    "typescript"
  ],
  "author": "",
  "license": "ISC"
}
